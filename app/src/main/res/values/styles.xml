<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    

    <style name="WhiteFont">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="WhiteLargeFont" parent="WhiteFont">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="WhiteMediumFont" parent="WhiteFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DarkGreyFont">
        <item name="android:textColor">#0E0E0E</item>
        <item name="android:tint">#E0E0E0</item>
    </style>

    <style name="DarkGreyMediumFont" parent="DarkGreyFont">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="DarkGreyMediumBoldFont" parent="DarkGreyMediumFont">
        <item name="android:textStyle">bold</item>
    </style>
    

</resources>
